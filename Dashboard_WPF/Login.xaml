<Window x:Class="Dashboard_WPF.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Dashboard_WPF"
    mc:Ignorable="d"
    Height="597" Width="432"
    WindowStyle="None"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    AllowsTransparency="True"
    MouseDown="MOVER" Style="{DynamicResource WindowStyle1}">
    <Border CornerRadius="12" Style="{DynamicResource BorderStyle1}">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Cursor="">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="LOGIN" HorizontalAlignment="Left" Grid.Column="0"                      
                           Margin="10,0,0,0" FontSize="14" Style="{DynamicResource TextBlockStyle1}"/>
                <Button x:Name="btnminimizar" Grid.Column="1" Click="btnminimizar_Click" Style="{DynamicResource BTNStyle2}"/>
                <Button x:Name="btnclose" Grid.Column="2" Click="btnclose_Click" Style="{DynamicResource BTNStyle3}"/>

            </Grid>
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="82,2,82,33">
                <Image Style="{DynamicResource ImageStyle1}" />
                <TextBlock Text="USUARIO" HorizontalAlignment="Left" FontSize="12"                   
                                        
                           Margin="0,35,0,0" Style="{DynamicResource TextBlockStyle1}"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" x:Name="txtusuario" KeyDown="txtID_KeyDown"/>


                <TextBlock Text="CONTRASEÑA" HorizontalAlignment="Left" FontSize="12"                                                          
                           Margin="0,25,0,0" Style="{DynamicResource TextBlockStyle1}"/>

                <PasswordBox Style="{DynamicResource PasswordBoxStyle1}" x:Name="txtPass" KeyDown="txtID_KeyDown"/>

                <Button x:Name="btnLogin"  Margin="0,50,0,0"                        
                        Height="40" Width="150"
                        Content="INICIAR"
                         Click="btnLogin_Click" Style="{DynamicResource BTNStyle1}"
                        />                
            </StackPanel>
        </Grid>
    </Border>
</Window>
