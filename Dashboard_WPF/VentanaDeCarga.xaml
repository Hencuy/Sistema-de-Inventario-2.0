<Window x:Class="Dashboard_WPF.VentanaDeCarga"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dashboard_WPF" 
        mc:Ignorable="d"
        Title="VentanaDeCarga" Height="500" Width="700"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        MouseDown="MOVER" Style="{DynamicResource WindowStyle1}">
    <Window.Resources>
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="#E0E0E0" BorderBrush="#C0C0C0" BorderThickness="1" CornerRadius="10">
                            <Grid>
                                <Rectangle x:Name="PART_Track" HorizontalAlignment="Left" Height="20" Fill="#E0E0E0" />
                                <Rectangle x:Name="PART_Indicator" HorizontalAlignment="Left" Height="20" Fill="Blue">
                                    <Rectangle.Clip>
                                        <RectangleGeometry Rect="0,0,0,20" />
                                    </Rectangle.Clip>
                                </Rectangle>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Style="{DynamicResource BorderStyle1}">
        <Grid>
            <Label Name="lblMensaje" Content="Bienvenido" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
            <ProgressBar Name="miProgressBar" Style="{StaticResource ProgressBarStyle}" Minimum="0" Maximum="100" Value="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="300" Height="20" Margin="0,0,0,60">
                <!-- Tu estilo personalizado aquí -->
            </ProgressBar>

        </Grid>
    </Border>
</Window>
